@model List<Ass1_C_5_OrderFastFood.Models.CartItem>

@{
    ViewData["Title"] = "Giỏ hàng của bạn";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2 class="mb-4 text-primary"><i class="fas fa-shopping-cart"></i> Giỏ hàng</h2>

@if (!Model.Any())
{
    <div class="alert alert-info text-center py-4">
        Giỏ hàng trống. Hãy bắt đầu <a href="/Food" class="alert-link">đặt món ngay</a>!
    </div>
}
else
{
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-light fw-bold">Danh sách món ăn & combo</div>
                <div class="card-body p-0">
                    <table class="table table-striped table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Đơn giá</th>
                                <th style="width: 150px;">Số lượng</th>
                                <th>Tổng</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.Name</strong>
                                        @if (item.ComboId.HasValue)
                                        {
                                            <span class="badge bg-info ms-1">Combo</span>
                                        }
                                    </td>
                                    <td class="text-success">@item.UnitPrice.ToString("C0")</td>
                                    <td>
                                        <form asp-action="UpdateQuantity" asp-controller="Cart" method="post" class="d-flex align-items-center">
                                            <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control form-control-sm me-2" style="width: 80px;" onchange="this.form.submit()" />
                                            @* Bạn cần thêm UpdateQuantity action nếu muốn update số lượng *@
                                        </form>
                                    </td>
                                    <td class="text-danger fw-bold">@item.Total.ToString("C0")</td>
                                    <td>
                                        <form asp-action="Remove" asp-controller="Cart" method="post" class="d-inline">
                                            <input type="hidden" name="foodItemId" value="@item.FoodItemId" />
                                            <input type="hidden" name="comboId" value="@item.ComboId" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <h4 class="text-end mt-4">
                Tổng cộng: <span class="text-danger fw-bold">@Model.Sum(x => x.Total).ToString("C0")</span>
            </h4>
        </div>

        <div class="col-lg-4">
            <div class="card shadow p-4 sticky-top" style="top: 15px;">
                <h5 class="card-title text-primary mb-3"><i class="fas fa-money-check-alt me-1"></i> Thanh toán</h5>
                <form asp-action="Checkout" asp-controller="Cart" method="post">
                    <div class="mb-3">
                        <label for="deliveryAddress" class="form-label fw-bold">Địa chỉ giao hàng</label>
                        <textarea id="deliveryAddress" name="deliveryAddress" class="form-control" rows="3" required placeholder="Nhập địa chỉ nhận hàng chi tiết"></textarea>
                    </div>
                    <div class="mb-4">
                        <label for="paymentMethod" class="form-label fw-bold">Phương thức thanh toán</label>
                        <select id="paymentMethod" name="paymentMethod" class="form-select">
                            <option value="COD">Thanh toán khi nhận hàng (COD)</option>
                            <option value="Mock">Chuyển khoản</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success btn-lg w-100">
                        <i class="fas fa-check-circle me-2"></i> Đặt hàng ngay
                    </button>
                </form>
            </div>
        </div>
    </div>
}
