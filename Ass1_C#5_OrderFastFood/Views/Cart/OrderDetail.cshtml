@model Ass1_C_5_OrderFastFood.Models.Order

<div class="container">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h3 class="fw-bold text-primary mb-3">
                <i class="fas fa-file-invoice me-2"></i>
                Chi tiết đơn hàng #@Model.Id
            </h3>

            <div class="row mb-3">
                <div class="col-md-6">
                    <p>
                        <strong>Trạng thái:</strong>
                        <span class="badge bg-info">@Model.Status</span>
                    </p>

                    <p>
                        <strong>Ngày đặt:</strong>
                        @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                    </p>
                </div>

                <div class="col-md-6">
                    <p><strong>Địa chỉ giao hàng:</strong></p>
                    <div class="alert alert-secondary py-2">
                        @Model.DeliveryAddress
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-light fw-bold">
            <i class="fas fa-utensils me-2"></i> Danh sách món ăn
        </div>
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Món</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Tổng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td class="fw-bold">@item.FoodItem?.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.UnitPrice.ToString("C0")</td>
                            <td class="text-danger fw-bold">
                                @(item.UnitPrice* item.Quantity).ToString("C0")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer text-end bg-white">
            <h4 class="text-danger fw-bold">
                Tổng cộng: @Model.Total.ToString("C0")
            </h4>
        </div>
    </div>
</div>
