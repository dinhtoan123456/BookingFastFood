@model Ass1_C_5_OrderFastFood.Models.Combo

@{
    ViewData["Title"] = "Chi tiết Combo";
}

<h2 class="mb-4 text-primary">@Model.Name</h2>

@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <img src="@Model.ImageUrl" class="img-fluid mb-3" style="max-height:300px; object-fit:cover;" />
}

<p class="text-muted">@Model.Description</p>

<h5>Thành phần:</h5>
@if (Model.ComboItems != null && Model.ComboItems.Any())
{
    <ul>
        @foreach (var item in Model.ComboItems)
        {
            <li>@item.FoodItem.Name</li>  @* Chỉ hiển thị tên món, bỏ số lượng *@
        }
    </ul>
}
else
{
    <p class="text-muted">Chưa có thành phần nào.</p>
}

<h4 class="text-danger fw-bold mt-3">@Model.Price.ToString("C0")</h4>

<a asp-controller="ComboOrder" asp-action="Index" class="btn btn-secondary mt-3">
    <i class="fas fa-arrow-left"></i> Quay lại
</a>
