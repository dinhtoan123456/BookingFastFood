@model Ass1_C_5_OrderFastFood.Models.FoodItem

@{
    ViewData["Title"] = "Chi tiết món ăn: " + Model.Name;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white text-center">
                <h2 class="mb-0"><i class="fas fa-eye me-2"></i> Chi tiết: @Model.Name</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-5">
                        <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Name" />
                    </div>
                    <div class="col-md-7">
                        <h1 class="text-primary mt-md-0 mt-3">@Model.Name</h1>
                        <hr />
                        <p class="mb-2"><strong><i class="fas fa-tag"></i> Danh mục:</strong> <span class="badge bg-secondary">@Model.Category?.Name</span></p>

                        <h3 class="text-danger fw-bold mt-4 mb-4"><i class="fas fa-money-bill-wave"></i> Giá: @Model.Price.ToString("C0")</h3>

                        <h5>Mô tả chi tiết:</h5>
                        <p class="text-muted">@Model.Description</p>

                        <div class="d-flex mt-4 pt-3 border-top">
                            <a asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-success btn-lg me-3 d-flex align-items-center">
                                <i class="fas fa-cart-plus me-2"></i> Thêm vào giỏ
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg d-flex align-items-center">
                                <i class="fas fa-arrow-left me-2"></i> Quay lại menu
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>