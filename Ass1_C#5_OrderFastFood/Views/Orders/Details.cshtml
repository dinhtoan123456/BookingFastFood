@model Ass1_C_5_OrderFastFood.Models.Order

@{
    ViewData["Title"] = "Chi tiết Đơn hàng #" + Model.Id;
}

<h2 class="mb-4 text-primary"><i class="fas fa-file-invoice"></i> Chi tiết đơn hàng #@Model.Id</h2>

<div class="row">
    <div class="col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header bg-primary text-white">
                Thông tin chung
            </div>
            <div class="card-body">
                <p class="mb-2"><strong>Khách hàng:</strong> @Model.ApplicationUser?.UserName</p>
                <p class="mb-2"><strong>Email:</strong> @Model.ApplicationUser?.Email</p>
                <p class="mb-2"><strong>Địa chỉ giao hàng:</strong> @Model.DeliveryAddress</p>
                <p class="mb-2"><strong>Phương thức thanh toán:</strong> @Model.PaymentMethod</p>

                @{
                    var statusClass = Model.Status switch
                    {
                        Ass1_C_5_OrderFastFood.Models.OrderStatus.Pending => "badge bg-warning text-dark",
                        Ass1_C_5_OrderFastFood.Models.OrderStatus.Processing => "badge bg-info",
                        Ass1_C_5_OrderFastFood.Models.OrderStatus.Delivered => "badge bg-success",
                        Ass1_C_5_OrderFastFood.Models.OrderStatus.Cancelled => "badge bg-danger",
                        _ => "badge bg-secondary"
                    };
                }
                <p class="mb-0"><strong>Trạng thái:</strong> <span class="@statusClass fw-bold">@Model.Status</span></p>
            </div>
            <div class="card-footer text-end">
                <h4>Tổng tiền: <span class="text-danger fw-bold">@string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:C0}", Model.Total)</span></h4>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header bg-secondary text-white">
                Chi tiết món ăn
            </div>
            <div class="card-body p-0">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Món</th>
                            <th>Đơn giá</th>
                            <th style="width: 15%;">Số lượng</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>@item.FoodItem?.Name</td>
                                <td class="text-success">@string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:C0}", item.UnitPrice)</td>
                                <td>@item.Quantity</td>
                                <td class="text-danger fw-bold">@string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:C0}", item.Quantity * item.UnitPrice)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <a asp-action="Index" class="btn btn-outline-secondary mt-3">
            <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách đơn hàng
        </a>
    </div>

    <div class="col-lg-5">
        <div class="card shadow p-4 sticky-top" style="top: 15px;">
            <h5 class="card-title text-success mb-3"><i class="fas fa-sync-alt"></i> Cập nhật trạng thái</h5>
            <form asp-action="ChangeStatus" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="mb-3">
                    <label for="statusSelect" class="form-label fw-bold">Chọn trạng thái mới:</label>
                    <select id="statusSelect" name="status" class="form-select">
                        @foreach (var status in Enum.GetValues(typeof(Ass1_C_5_OrderFastFood.Models.OrderStatus)))
                        {
                            <option value="@status" selected="@(status.Equals(Model.Status))">@status</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary w-100 d-flex align-items-center justify-content-center">
                    <i class="fas fa-save me-2"></i> Lưu cập nhật
                </button>
            </form>
        </div>
    </div>
</div>