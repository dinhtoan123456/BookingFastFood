@using Microsoft.AspNetCore.Identity
@using Ass1_C_5_OrderFastFood.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrderFastFood</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    @if (User.IsInRole("Admin"))
                    {
                        // Hiển thị tên Admin khi Admin đăng nhập
                        <span>🍔 Admin - OrderFastFood</span>
                    }
                    else
                    {
                        // Hiển thị tên chung cho Khách hàng/Khách vãng lai
                        <span>🍔 OrderFastFood</span>
                    }
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Food">Menu</a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            var user = await UserManager.GetUserAsync(User);
                            var roles = await UserManager.GetRolesAsync(user);

                            // --- MENU ADMIN (Khi User có role 'Admin') ---
                            if (roles.Contains("Admin"))
                            {
                                // *LƯU Ý: Đảm bảo bạn đã hoàn thành việc chuyển Controllers/Views Admin về cấp độ gốc (non-Area)*
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="FoodItems" asp-action="Index">Manage Food Items</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Combos" asp-action="Index">Manage Combos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Orders" asp-action="Index">Orders</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Users" asp-action="Index">Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Swagger" asp-action="Index">Swagger</a>
                                </li>
                            }
                            // --- MENU KHÁCH HÀNG (Khi User có role 'Customer') ---
                            else // Đã đăng nhập nhưng không phải Admin (Giả định là Customer)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ComboOrder" asp-action="Index">Combo Menu</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Cart" asp-action="Index">Cart</a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var user = await UserManager.GetUserAsync(User);
                            <li class="nav-item">
                                <span class="navbar-text me-2">Hello, @user.UserName!</span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                    <button type="submit" class="btn btn-link nav-link">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-3">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-4">
        &copy; @DateTime.Now.Year - OrderFastFood
    </footer>
    @* Đặt TẤT CẢ các thư viện JS ở đây *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* Giữ lại một trong hai dòng Bootstrap JS. Tôi chọn CDN cho tính tiện lợi: *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @* Các thư viện Validation *@
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @* CHỈ RENDER SECTION SCRIPT MỘT LẦN DUY NHẤT VÀO VỊ TRÍ NÀY (Dòng 101 đã sửa) *@
    @RenderSection("Scripts", required: false)
</body>
</html>